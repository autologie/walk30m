import React, { Component } from 'react';
import { Router, Route, Link, browserHistory } from 'react-router';
import AppHeader from '../app-header';
import Tools from '../tools';
import Map from '../map';
import Recommends from '../recommends';
import ReleaseNote from '../release-note';
import About from '../about';
import MessageForm from '../message-form';
import styles from './index.css';

export default class App extends Component {

  render() {
    return (
      <div className={`${styles[this.props.status]} ${styles.app}`}>
        <AppHeader status={this.props.status}/>
        <Tools status={this.props.status} />
        <Router history={browserHistory}>
          <Route path="/release-note" component={ReleaseNote} />
          <Route path="/about" component={About} />
          <Route path="/message-form" component={MessageForm} />
          <Route path="/" component={Map} />
        </Router>
        <Recommends />
      </div>
    );
  }
}
